meta {
  name: Alle Filme
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/film
  body: none
  auth: none
}

tests {
  test("Status sollte 200 sein", function() {
    expect(res.status).to.equal(200);
  });

  test("Response sollte ein Array sein", function() {
    expect(Array.isArray(res.body)).to.be.true;
  });

  test("Jeder Film sollte eine ID haben", function() {
    if (res.body.length > 0) {
      res.body.forEach(film => {
        expect(film.id).to.be.a("number");
      });
    }
  });

  test("Jeder Film sollte einen Titel haben", function() {
    if (res.body.length > 0) {
      res.body.forEach(film => {
        expect(film.titel).to.be.a("string");
      });
    }
  });
}

